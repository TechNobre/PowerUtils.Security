<Project Sdk="Microsoft.NET.Sdk">

  <!-- Assembly details -->
  <PropertyGroup>
    <ProjectGuid>b41040a3-da8c-4037-8d0d-b795f6e12a44</ProjectGuid>

    <!-- Assembly and projecto details -->
    <!-- https://docs.microsoft.com/en-us/dotnet/standard/frameworks -->
    <TargetFrameworks>net6.0;net5.0;netstandard2.0;netstandard2.1;net462;net48;netcoreapp3.1</TargetFrameworks>


    <AssemblyName>PowerUtils.Security</AssemblyName>
    <RootNamespace>PowerUtils.Security</RootNamespace>

    <Version>2.0.0</Version>

    <PackageOutputPath>bin\</PackageOutputPath>
  </PropertyGroup>


  <!-- Package details -->
  <PropertyGroup>
    <CurrentYear>$([System.DateTime]::UtcNow.ToString(yyyy))</CurrentYear>

    <PackageId>PowerUtils.Security</PackageId>
    <title>PowerUtils.Security</title>
    <Product>PowerUtils.Security</Product>

    <Authors>Nelson Nobre</Authors>
    <Company>TechNobre</Company>

    <License>MIT</License>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Copyright>Copyright Â© $(CurrentYear) by TechNobre</Copyright>

    <Description>Helpers, extensions and utilities to work with security</Description>
    <Summary>Helpers, extensions and utilities to work with security</Summary>
    <PackageTags>PowerUtils;Utils;Helpers;Extensions;Encryption;Security;Hash;Encode</PackageTags>
    <PackageProjectUrl>https://github.com/TechNobre/PowerUtils.Security</PackageProjectUrl>
    <NeutralLanguage>en-GB</NeutralLanguage>

    <PackageIcon>logo_128x128.png</PackageIcon>
    <PackageReadmeFile>README.nuget.org.md</PackageReadmeFile>

    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/TechNobre/PowerUtils.Security</RepositoryUrl>
  </PropertyGroup>


  <!-- Source link -->
  <PropertyGroup>
    <Deterministic>true</Deterministic>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <ContinuousIntegrationBuild Condition="'$(GITHUB_ACTIONS)' == 'true'">true</ContinuousIntegrationBuild>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols Condition=" '$(DebugType)' != 'embedded' ">true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>


  <!-- DOCUMENTATION -->
  <PropertyGroup>
    <DocumentationFile>bin\PowerUtils.Security.xml</DocumentationFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn> <!-- Prevent XML documentation warnings -->
  </PropertyGroup>


  <!-- Tests -->
  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>$(AssemblyName).Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>


  <ItemGroup Condition="'$(Configuration)'=='Release'">
    <None Include="..\assets\logo\logo_128x128.png" Pack="true" PackagePath="" />
    <None Include="..\LICENSE" Pack="true" PackagePath=""/>
    <None Include="..\README.nuget.org.md" Pack="true" PackagePath="" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>


</Project>